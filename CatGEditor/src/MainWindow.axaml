<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="CatGEditor.MainWindow"
        Title="CatGEditor"
        Background="#202020"
        Icon="/assets/icon/adasasdf.ico"
        ExtendClientAreaToDecorationsHint="True"
        ExtendClientAreaChromeHints="NoChrome"
        xmlns:i="https://github.com/projektanker/icons.avalonia"
        >
    <DockPanel>
        <Panel Background="#202020" Height="40" DockPanel.Dock="Top">
            <Grid ColumnDefinitions="6*,Auto,3*,Auto,1*">
                <Panel>
                    <TextBlock Text="선택 영역" VerticalAlignment="Center" Grid.Column="0" Margin="10" Foreground="White"/>
                </Panel>    
                
                
                <Panel Grid.Column="2" Background="#313131">
                    <i:Icon Value="mdi-drag" HorizontalAlignment="Left" FontSize="32" Margin="-2, 0, 0, 0"/>
               
                </Panel>
                
                <Panel Grid.Column="4">
                    <CaptionButtons Height="40"/>
                </Panel>
            </Grid>
        </Panel>
        
        <Rectangle Height="1" DockPanel.Dock="Top" Fill="#313131"/>
        
        <Panel Background="#202020">
            <TextBlock Text="중앙 콘텐츠" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="White"/>
        </Panel>
    </DockPanel>
</Window>
